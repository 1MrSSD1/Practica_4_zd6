<Window x:Class="WpfApp85.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp85"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Введите :" Margin="10"/>
            <TextBox x:Name="Boxn" Grid.Row="1" Margin="10"/>
            <Button Content="OK" Click="Button_Click" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,10,0" Width="272"/>
            <TextBlock x:Name="txtOtv" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
